<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnChannelDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel -"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnVolumeDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume -"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnVolumeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume +"
        android:layout_below="@id/btnPower"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnChannelUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel +"
        android:layout_below="@id/btnPower"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvChannelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel: 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/btnVolumeDown"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
